<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <div id="form-div">
      <form id="taskForm" action="/create" method="post">
        <input type="text" id="taskInput" placeholder="Add a task" name="title" required />
        <textarea placeholder="Enter the Text" name="details" required></textarea>
        <button type="submit">Add Task</button>
      </form>
    </div>
    <div id="task">
        <% if (files.length > 0) { %>
  <% files.forEach((val) => { %>
    <div id="card">
      <div id="div"><h2><%= val %></h2> <form id="formtwo" action="/delete" method="post">
        <input type="hidden" name="filename" value="<%= val %>"/>
        <button type="submit" class="deletebutton">x</button>
      </form></div>
      <a href="./files/<%= val %>">Read more</a>
    </div>
  <% }); %>
<% } else { %>
  <h1>No Task Yet</h1>
<% } %>

    </div>
    <script src="https://cdn.jsdelivr.net/npm/gsap@3.12.2/dist/gsap.min.js"></script>
    <script type="module" src="/script.js"></script>
  </body>
</html>
